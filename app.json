{
  "expo": {
    "name": "Booking",
    "slug": "cct-booking-mobile",
    "version": "2.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "cctbooking",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/icononload.png",
      "resizeMode": "contain",
      "backgroundColor": "#5fbfc0"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.compassionatecare.bookingportal",
      "buildNumber": "25",
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSLocationWhenInUseUsageDescription": "CCT Booking needs access to your location to automatically set pickup addresses, display routes on the map, and calculate accurate transportation fares when booking trips.",
        "NSCameraUsageDescription": "The app uses the camera to scan payment cards for faster checkout (optional feature provided by payment processor)."
      },
      "config": {
        "usesNonExemptEncryption": false,
        "googleMapsApiKey": "AIzaSyDylwCsypHOs6T9e-JnTA7AoqOMrc3hbhE"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#5fbfc0"
      },
      "edgeToEdgeEnabled": false,
      "package": "com.compassionatecare.bookingportal",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "NOTIFICATIONS",
        "POST_NOTIFICATIONS"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDylwCsypHOs6T9e-JnTA7AoqOMrc3hbhE"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/notification.png",
          "color": "#5fbfc0"
        }
      ],
      [
        "onesignal-expo-plugin",
        {
          "mode": "production"
        }
      ]
    ],
    "extra": {
      "oneSignalAppId": "ae7b0431-a892-437f-81ed-dda534b3d57d",
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "OneSignalNotificationServiceExtension",
                  "bundleIdentifier": "com.compassionatecare.bookingportal.OneSignalNotificationServiceExtension",
                  "entitlements": {
                    "com.apple.security.application-groups": [
                      "group.com.compassionatecare.bookingportal.onesignal"
                    ]
                  }
                }
              ]
            }
          }
        },
        "projectId": "3f623a81-8d54-483d-9907-b34694de64cf"
      }
    },
    "owner": "jass_khinda"
  }
}
